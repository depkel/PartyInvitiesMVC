
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   
    <script src="~/Scripts/angular.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <title>Index</title>
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }

        body {
            background-color: #F1F1F1;
        }
    </style>
</head>
<body ng-app>
    <div>
        <div class="text-center">
            <h1>New Year Party</h1>

            @ViewBag.greeting by @ViewBag.person <br>
            We are going to have exciting party
            <br />
            <div class="btn btn-success">
                @Html.ActionLink("RSVP Now", "RsvpForm")
            </div>
                <br>

                <h1>First AngularJS Application</h1>

                lets do some maths Enter Numbers to Multiply:
                <input type="text" ng-model="Num1" /> x <input type="text" ng-model="Num2" />
                = <span>{{Num1 * Num2}}</span>
            
        </div>
    </div>
</body>
</html>
